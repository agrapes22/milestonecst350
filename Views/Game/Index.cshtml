@model IEnumerable<Milestone.Models.CellModel>

<style>
    .game-button {
        width: 85px;
        border: none;
    }
    .game-button-image {
        width: 70px;
    }
    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }
    .line-break {
        flex-basis: 100%;
        height: 0;
    }
    .button-label {
        font-size: 8px;
        text-align: center;
    }
</style>

@{ 
    //Add image names for game pieces here!
    string[] gamePieces = {"", "", ""};
}

<form>
    <div class="cell-zone">
        @for (int i = 0; i < Model.Count(); i++)
         {
            @if (i % 6 == 0)
            {
            <div class="line-break"></div>
            }
            <button class="game-button" type="submit" value="@Model.ElementAt(i).Id" name="buttonNumber" asp-controller="Game" asp-action="HandleLeftClick" >
                <img class="game-button-image" src="~/img/@gamePieces[Model.ElementAt(i).State]" />
                <div class="button-label">
                    @Model.ElementAt(i).Id
                    ,
                    @Model.ElementAt(i).State
                </div>
            </button>
         }
    </div>
</form>